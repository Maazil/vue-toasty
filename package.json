{
  "name": "vue-toasty-notif",
  "version": "0.1.0",
  "description": "A lightweight, customizable toast notification system for Vue 3 with TypeScript support",
  "main": "dist/vue-toasty-notif.umd.js",
  "module": "dist/vue-toasty-notif.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "dev:demo": "vite --config vite.config.ts --mode demo ./examples",
    "build:demo": "vite build --config vite.config.ts --mode demo ./examples",
    "deploy:demo": "npm run build:demo && gh-pages -d demo-dist"
  },
  "author": {
    "name": "Matthew Ling",
    "url": "https://github.com/Maazil"
  },
  "keywords": [
    "vue",
    "vue3",
    "toast",
    "notification",
    "alert",
    "composable",
    "typescript"
  ],
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.14.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "gh-pages": "^5.0.0",
    "typescript": "^4.9.5",
    "vite": "^4.2.0",
    "vite-plugin-dts": "^2.1.0",
    "vue": "^3.5.13",
    "vue-tsc": "^1.2.0"
  },
  "license": "MIT"
}
